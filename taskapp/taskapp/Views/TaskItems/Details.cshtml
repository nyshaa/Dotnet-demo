@model taskapp.Models.TaskItem

@{
    ViewBag.Title = "Details";
}

<div class="text-center">
    <h2 class="display-4">Task Details</h2>
</div>
<hr />
<div class="row>
    <div class="col-md-4">
        <dl class="row">
            <dd class="mt-3">
                <h3><b>@Html.DisplayFor(model => model.Title)</b></h3>
            </dd>
        </dl>
        <dl class="row">
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
        </dl> 
    </div>
</div>
<div class="text-right mt-3">
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) | @Html.ActionLink("Back to List", "Index")
</div>
