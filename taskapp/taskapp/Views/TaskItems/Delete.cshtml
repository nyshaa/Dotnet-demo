@model taskapp.Models.TaskItem

@{
    ViewBag.Title = "Delete";
}

<div class="text-center">
    <h2 class="display-4">Delete Task</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dd class="mt-3">
                <h3><b>@Html.DisplayFor(model => model.Title)</b></h3>
            </dd>
        </dl>
